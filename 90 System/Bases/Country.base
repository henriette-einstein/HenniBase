filters:
  and:
    - '!file.path.startsWith("90 System")'
    - type == link("Country")
properties:
  file.name:
    displayName: Name
  note.capital:
    displayName: Capital
views:
  - type: table
    name: All Countries
    order:
      - file.name
      - capital
    sort:
      - property: file.name
        direction: ASC
    columnSize:
      file.name: 280
